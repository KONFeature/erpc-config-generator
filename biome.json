{
    "$schema": "node_modules/@biomejs/biome/configuration_schema.json",
    "files": {
        "ignore": ["src/generatedTypes/**", "dist/**", "src/bin/**"],
        "include": ["example/**", "src/**", "cli/**"]
    },
    "organizeImports": {
        "enabled": true
    },
    "linter": {
        "enabled": true,
        "rules": {
            "recommended": true,
            "complexity": {
                "noUselessTernary": "error"
            }
        }
    },
    "formatter": {
        "enabled": true,
        "indentStyle": "space",
        "indentWidth": 4
    },
    "javascript": {
        "formatter": {
            "quoteStyle": "double",
            "semicolons": "always",
            "trailingCommas": "es5"
        }
    }
}
